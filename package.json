{
  "name": "widgetbook-generator",
  "displayName": "Widgetbook Entries Generator",
  "publisher": "LeanCode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dart",
    "onCommand:widgetbook-generator.generate.widget"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "widgetbook-generator.generate.widget",
        "title": "Create widgetbook entry for this widget"
      }
    ],
    "configuration": [
      {
        "title": "Widgetbook Entries Generator configuration",
        "properties": {
          "widgetbook-generator.widgets-directory-path": {
            "type": "string",
            "default": "TODO",
            "description": "Widgetbook widgets directory."
          },
          "widgetbook-generator.root-directory-name": {
            "type": "string",
            "default": "TODO",
            "description": "Root project directory name."
          },
          "widgetbook-generator.widgetbook-version": {
            "type": "string",
            "enum": [
              "3.0.0",
              "3.2.0"
            ],
            "default": "3.0.0",
            "description": "Widgetbook version defined in your pubspec file."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.3",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.47.0",
    "glob": "^8.1.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "change-case": "^4.1.2"
  }
}
